---
import TextSlider from "../components/TextSlider.astro";
import TextSlider2 from "../components/TextSlider2.astro";
import Separator from "../components/Separator.astro";

// Get the current pathname
const currentPath = Astro.url.pathname;
// Define a map of routes
const routes = {
  "/": "Home",
  "/contact/": "Kontakt",
};
// Determine the active route
const activeRoute = routes[currentPath] || null;
---

<header>
  <h1>
    <a href="/" class={activeRoute === "Home" ? "current" : ""}
      ><TextSlider2 content="Simone Ballüer" /></a>
  </h1>
<span class="mobile-align-right">
  <span class="lang-de"><TextSlider2 content="Bühnenbild / Kostümbild" /></span>
  <span class="lang-en"><TextSlider2 content="Stage design / Costume design" /></span>
</span>
  <ul>
    <li>
      <a
        href="/contact/"
        class={activeRoute === "Kontakt" ? "current" : ""}
        data-astro-prefetch
      >
        <TextSlider>
          <span class="lang-de">Kontakt</span>
          <span class="lang-en">Contact</span>
        </TextSlider>
      </a>
    </li>
  </ul>
  <div class="header-toggles">
    <button id="theme-toggle" aria-label="Theme"></button>
    <button id="lang-toggle" aria-label="Language"></button>
  </div>
</header>
<Separator />

<style>
  header {
    position: relative;
    display: grid;
    grid-template-columns: min-content auto;
    font-weight: 700;
    padding: 1rem 0;
    gap: 1rem;
    justify-content: space-between;
  }
  header a.current {
    pointer-events: none;
  }
  h1 {
    font-size: 1rem;
    font-weight: inherit;
    margin: 0;
  }
  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin-top: 2rem;
    padding: 0;
    grid-column: auto / span 2;
    font-style: ;
    font-weight: normal;
    justify-content: flex-start;
  }
  @media screen and (min-width: 50em) {
    header {
      grid-template-columns: 20vw 1fr auto auto;
      margin-top: 0rem;

      }  
    }
  @media screen and (min-width: 50em) {
  ul {
      margin-top: 0rem;
    }
  }
/* Style toggle buttons */
#theme-toggle,
#lang-toggle {
  font-size: 1rem;
}
.mobile-align-right {
  display: flex;
  justify-content: flex-end;
  font-weight: normal;
}

/* On screens ≥ 50em (≈ 800px), reset the alignment if needed */
@media screen and (min-width: 50em) {
.mobile-align-right {
    justify-content: flex-start; /* or center, or remove display:flex entirely */
  }
}

.header-toggles {
  display: flex;
  gap: 0.5rem;
  position: absolute;
  right: 1rem;
  top: 1.5rem;
}

@media screen and (min-width: 50em) {
  .header-toggles {
    position: static;
    margin-left: 1rem;
    top: auto;
    right: auto;
  }
}
</style>