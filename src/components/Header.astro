---
import TextSlider from "./TextSlider.astro";
import TextSlider2 from "./TextSlider2.astro";
import Separator from "./Separator.astro";
---
<header>
  <div class="top-row">
    <h1><a href="/"><TextSlider2 content="Jannis Reinelt" /></a></h1>
    <div class="toggles">
      <button id="lang-toggle" aria-label="Language"></button>
      <button id="theme-toggle" aria-label="Theme"></button>
    </div>
  </div>
  <Separator />
  <nav>
    <ul>
      <li><a href="/about/"><TextSlider content="about" /></a></li>
      <li><a href="/"><TextSlider content="art/projects" /></a></li>
      <li><a href="/video-light-camera/"><TextSlider content="video/light/camera" /></a></li>
    </ul>
  </nav>
</header>

<style>
  header { display: flex; flex-direction: column; gap: 0.5rem; }
  .top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  h1 { margin: 0; font-size: 1rem; font-weight: 700; }
  .toggles {
    display: flex;
    gap: 0.5rem;
  }
  nav ul {
    display: flex;
    justify-content: space-between;
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
